<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Welcome to Eat and Drink Restaurant</h1>
    </header>
    <main>
        <h2>Recipes</h2>
        <div class="recipe-list">
            <% recipes.forEach(recipe => { %>
                <div class="recipe">
                    <h3><a href="/recipe/<%= recipe.id %>"><%= recipe.name %></a></h3>
                    <p><%= recipe.description %></p>
                    <p class="rating">Rating: <%= recipe.rating %></p>
                </div>
            <% }); %>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Eat and Drink Restaurant. All rights reserved.</p>
    </footer>
</body>
</html>
